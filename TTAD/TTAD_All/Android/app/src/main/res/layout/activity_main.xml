<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLoadInteraction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="闪屏广告"/>
    <Button
        android:id="@+id/btnBannerAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banner 广告"/>
    <Button
        android:id="@+id/btnLoadHorizontalAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载横屏激励广告"/>
    <Button
        android:id="@+id/btnLoadVerticalAD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载竖屏激励广告"/>
    <Button
        android:id="@+id/btnShowVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="播放激励广告"/>

</LinearLayout>